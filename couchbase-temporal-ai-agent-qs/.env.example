# Couchbase Configuration
COUCHBASE_CONNECTION_STRING=couchbase://localhost
COUCHBASE_USERNAME=Administrator
COUCHBASE_PASSWORD=password
COUCHBASE_BUCKET=transaction_ai_poc
COUCHBASE_SCOPE=_default

# Temporal Configuration
TEMPORAL_HOST=localhost:7233 #temporal:7233 for docker setup
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=transaction-processing-queue

# AWS Configuration (Required for AWS Bedrock)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# API Configuration
# For local development use: http://localhost:8000/api
# For Docker use: http://api:8000/api
API_BASE_URL=http://localhost:8000/api

# LLM Provider Configuration
# Choose between 'bedrock' or 'groq'
LLM_PROVIDER=groq

# Groq Configuration (Required if LLM_PROVIDER=groq)
GROQ_API_KEY=your_groq_api_key_here

# Embedding Configuration
VOYAGE_API_KEY=your_voyage_api_key_here
# Cohere via Bedrock is used as fallback when Voyage is unavailable

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
CONFIDENCE_THRESHOLD_APPROVE=85
CONFIDENCE_THRESHOLD_ESCALATE=70
AUTO_APPROVAL_LIMIT=50000